<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:X;assembly=X"
    x:Class="X.RatingsSelectionView">
	<ContentView.Content>
        <local:ScaledStackLayout  HorizontalOptions="FillAndExpand">   
                <Label Text="{Binding name}" Margin="0,10,0,0" HorizontalTextAlignment="Center" VerticalOptions="Center" FontFamily="Helvetica" FontSize="12" FontAttributes="Italic" HorizontalOptions="CenterAndExpand" TextColor="#da2916"/>
                <local:RatingsView Emojis="{Binding ratingEmoji}" VerticalOptions="Center"  />
        </local:ScaledStackLayout>
	</ContentView.Content>
</ContentView>
